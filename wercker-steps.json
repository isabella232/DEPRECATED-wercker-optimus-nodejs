{
  "platformSteps" : [
    {"name" : "platform", "type" : "commands-step", "blocking" : true,
      "options" : {
        "commands" : [
          "sudo chown ubuntu -R /build",
          ". ~/node_$WERCKER_PLATFORM_VERSION/bin/activate",
          "node --version",
          "npm --version",
          "cd $WERCKER_ROOT"
        ]}}],
  "dependencySteps" : [
    {"name" : "npm_install", "type" : "commands-step", "blocking" : false,
      "options" : {
        "dependentOnFile" : "package.json",
        "commands" : [
          "cd $WERCKER_ROOT",
          "npm install"
        ]}}
  ],
  "testSteps" : [
    {"name" : "npm_test", "type" : "commands-step", "blocking" : false,
      "options" : {
        "dependentOnFile" : "package.json",
        "commands" : [
          "cd $WERCKER_ROOT",
          "npm test"
        ]}},
    {"name" : "jshint", "type" : "jshint-step", "blocking" : false}
  ]
}